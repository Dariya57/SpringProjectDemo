package com.example.springexampleprojectdemo.services;

import com.example.springexampleprojectdemo.models.Person;
import com.example.springexampleprojectdemo.repositories.PersonRepositoryInterface;
import com.example.springexampleprojectdemo.services.interfaces.PersonServiceInterface;
import org.springframework.stereotype.Service;

import java.util.List;

@Service
public class PersonService implements PersonServiceInterface {

    private final PersonRepositoryInterface repo;

    public PersonService(PersonRepositoryInterface repo) {
        this.repo = repo;
    }

    @Override
    public List<Person> getAll() {
        return repo.findAll();
    }

    @Override
    public Person getById(int id) {
        return repo.findById(id).orElse(null);
    }

    @Override
    public Person create(Person person) {
        return repo.save(person);
    }

    @Override
    public List<Person> getBySurname(String surname) {
        return repo.findBySurname(surname);
    }
}
